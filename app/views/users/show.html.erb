<div class="usr-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(/assets/francesca-tirico-9G9vxsMzi18-unsplash.jpg)">
My Account
</div>

<div class="container country-body">

  <div class="row">

    <div class="col-6">
      <div class="container">
        <h1>My Details</h1>
        <ul>
          <li><b>First Name: </b><%= current_user.first_name %> </li>
          <li><b>Last Name: </b><%= current_user.last_name %></li>
          <li><b>Email: </b><%= current_user.email %></l1>
        </ul>
      
        <%= link_to "Edit", edit_user_registration_path  %>
      </div>
    </div>

    <div class="col user-shw-alerts">
      <h1>My Alerts: </h1>
      <ol> 
        <% @alerts.each do |alert|  %>
            <li> <%= link_to alert.country.name, country_path(alert.country_id)  %> 
            <div class="d-inline bell"><i class="far fa-bell-slash"></i></div>
            <%= link_to "Mute", alert, method: :delete , data: {confirm: "Are you sure?"} %> </li>
          <% end %>
      </ol> 
    </div>
  </div>


  <div class="col user-shw-alerts">
  <h1>My Reviews: </h1>
  <ol>
    <% @user.reviews.each do |review|  %>
        <li> <%= link_to review.country.name, country_path(review.country_id)  %>
        <%= link_to  review, method: :delete , data: {confirm: "Are you sure?"} do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </li>

      <% end %>
  </ol>
  </div>

</div>
